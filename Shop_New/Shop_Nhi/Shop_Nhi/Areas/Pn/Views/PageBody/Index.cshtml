@model List<Shop_Nhi.Models.Framework.PageBody>


@{
    ViewBag.Title = "Quản lý trang";
    Layout = "~/Areas/Pn/Views/Shared/_Layout.cshtml";
}

@section title{
 <ol class="breadcrumb">
    <li><a href="@Url.Action("Index", "Pn")">ADMIN</a></li>
    <li><a href="@Url.Action("Body","Pn")">QUẢN TRỊ NỘI DUNG</a></li>
    <li class="active">DANH SÁCH TRANG</li>
</ol>
}

@section JsFooter{


    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').DataTable();
        });

    </script>

   

}
<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive">
           
            <table id="datatable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Trang</th>
                        <th>Ngày tạo</th>
                        <th>Người tạo</th>
                        <th>Ngày sửa</th>
                        <th>Người sửa</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var kichhoat = "btn btn-success btn-xs";
                        var khoa = "btn btn-danger btn-xs";
                        <tr id="row_@item.ID">
                            <td>@item.Menu.Name</td>
                            <td>@item.createDate</td>
                            <td>@item.modifiedByID</td>
                            <td>@item.modifiedByDate</td>
                            <td>@item.modifiedByID</td>
                            <td>
                                <a class="btn btn-primary btn-xs" href="@Url.Action("Edit","PageBody",new {id = item.ID })">
                                    <i class="fa fa-folder"></i>
                                    Xem
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



