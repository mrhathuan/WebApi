                        </div>
                        <div class="brand-body-item-icon-title">FOOTER</div>
                    </a>
                </div>

            </div>
        </div>
    </div>
</div><!--/.Grid-->


<!--Theme-->
<div class="modal" modal-show modal-visible="showModal_Theme" role="dialog" data-refresh="true">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chọn màu cho trang chủ</h4>
            </div>
            <div class="modal-body cus-window">
                <a href="#" ng-click="Change_THEME($event)" data-link="/Content/theme-color/orange-theme.css" class="change-theme">
                    <div class="theme-color" style="background-color:#ff871c;"></div>
                </a>
                <a href="#" ng-click="Change_THEME($event)" id="bridge" data-link="/Content/theme-color/bridge-theme.css" class="change-theme">
                    <div class="theme-color" style="background-color:#a5d549;"></div>
                </a>

                <a href="#" ng-click="Change_THEME($event)" id="dark-red" data-link="/Content/theme-color/dark-red-theme.css" class="change-theme">
                    <div class="theme-color" style="background-color:#970001;"></div>
                </a>

                <a href="#" ng-click="Change_THEME($event)" id="rose" class="change-theme" data-link="/Content/theme-color/rose-theme.css">
                    <div class="theme-color" style="background-color:#ff6666;"></div>
                </a>

                <a href="#" ng-click="Change_THEME($event)" id="green" class="change-theme" data-link="/Content/theme-color/green-theme.css">
                    <div class="theme-color" style="background-color:#3fc35f;"></div>
                </a>

                <a href="#" ng-click="Change_THEME($event)" id="lite-blue" class="change-theme" data-link="/Content/theme-color/lite-blue-theme.css">
                    <div class="theme-color" style="background-color:#37c6f5;"></div>
                </a>

                <a href="#" ng-click="Change_THEME($event)" id="pink" class="change-theme" data-link="/Content/theme-color/pink-theme.css">
                    <div class="theme-color" style="background-color:#ff2851;"></div>
                </a>

                <a href="#" ng-click="Change_THEME($event)" id="purple" class="change-theme" data-link="/Content/theme-color/purple-theme.css">
                    <div class="theme-color" style="background-color:#c762cb;"></div>
                </a>

                <a href="#" ng-click="Change_THEME($event)" id="red" class="change-theme" data-link="/Content/theme-color/red-theme.css">
                    <div class="theme-color" style="background-color:#ee4532;"></div>
                </a>

                <a href="#" ng-click="Change_THEME($event)" id="yellow" class="change-theme" data-link="/Content/theme-color/yellow-theme.css">
                    <div class="theme-color" style="background-color:#f7c510;"></div>
                </a>
 
            </div>
            <div class="modal-footer">                
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>

    </div>
</div>



