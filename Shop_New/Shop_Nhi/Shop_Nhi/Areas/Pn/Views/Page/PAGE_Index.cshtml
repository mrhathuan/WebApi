
@{
    ViewBag.Title = "Trang";
}

<div class="row">
    <ol class="breadcrumb" style="font-size:16px;color:black">
        <li><a href="/Pn/#/DASH_Index"><i class="fa fa-home"></i></a></li>
        <li><a href="/Pn/#/CONTENT_Index">Quản trị nội dung</a></li>
        <li class="active">Quản trị trang</li>
    </ol>
</div>
<!--Grid-->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default cus-grid" style="border:none;margin-top:5px">
            <div class="panel-body">
                <div expand-k-grid class="cus-grid" kendo-grid="PAGE_Grid" k-options="PAGE_gridOptions"></div>
            </div>
        </div>
    </div>
</div><!--/.Grid-->
<!--toolbar-->
<script type="text/x-kendo-template" id="PAGEGridTemplate">
    <div class="gridtoolbar">
        <div class="toolbar-left" style="float:left;">            
            <a ng-click="BACK_Click($event)" class="k-button k-button-icontext" style="font-size:20px;color:black;font-weight:bold;border:none" href="\#"><span class="fa fa-arrow-left"><span class="tooltip">Quay lại</span></span></a>
        </div>
    </div>
</script>

<!--Win-->
<div class="modal" modal-show modal-visible="showModal_PAGE" role="dialog" data-refresh="true">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Chi tiết bài viết</h4>
            </div>
            <div class="modal-body cus-window">
                <div class="cus-form">
                    <div class="form-body">
                        <form action="/" method="PAGE">
                            <div class="form-content-100" v-form="vform_PAGE">
                                <input type="hidden" ng-model="Item.ID" value="{{Item.ID}}" />
                              
                                <div class="rowinput">
                                    <label>metaKeywords</label>
                                    <div>
                                        <input type="text" class="k-textbox" maxlength="250" ng-model="Item.metaKeywords" v-form-length="250" />
                                    </div>
                                    <div class="clear"></div>
                                </div>
                                <div class="rowinput">
                                    <label>metaDescription</label>
                                    <div>
                                        <textarea rows="4" maxlength="250" v-form-length="250" style="width:100%" ng-model="Item.metaDescription"></textarea>
                                    </div>
                                    <div class="clear"></div>
                                </div>
                            
                                <div class="rowinput">
                                    <label>Chi tiết</label>
                                    <div>
                                        <textarea rows="4" ckEditor style="width:calc(100% - 7px)" ng-model="Item.detail"></textarea>
                                    </div>
                                    <div class="clear"></div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="/" ng-click="PAGE_SaveClick($event,vform_PAGE)" class="btn btn-success btn-save" data-title="Lưu">Lưu</a>
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>

    </div>
</div>
