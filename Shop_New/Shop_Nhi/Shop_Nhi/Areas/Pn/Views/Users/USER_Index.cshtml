
<div class="row">
    <ol class="breadcrumb" style="font-size:16px;color:black">
        <li><a href="/Pn/#/DASH_Index"><i class="fa fa-home"></i></a></li>
        <li class="active">Tài khoản</li>
    </ol>
</div>
<!--Grid-->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default cus-grid" style="border:none;margin-top:5px">
            <div class="panel-body">
                <div expand-k-grid class="cus-grid" kendo-grid="User_Grid" k-options="User_gridOptions"></div>
            </div>
        </div>
    </div>
</div><!--/.Grid-->
<!--toolbar-->
<script type="text/x-kendo-template" id="UserGridTemplate">
    <div class="gridtoolbar">
        <div class="toolbar-left" style="float:left;">
            <a class="k-button k-button-icontext k-grid-excel" style="font-size:20px;color:black;font-weight:bold;border:none" href="\#"><span class="fa fa-file-excel-o"></span></a>
            <a ng-click="USER_WinClick($event,0)" class="k-button k-button-icontext" style="font-size:20px;color:black;font-weight:bold;border:none" href="\#"><span class="fa fa-plus"><span class="tooltip">Thêm mới</span></span></a>
        </div>
    </div>
</script>

<script type="text/x-kendo-template" id="statusTpl">
    <a href="\\#" ng-click="ChangeStatus($event,#=id#)">#=status?'<span class="btn_success"><i class="fa fa-unlock"></i> Kích hoạt</span>':'<span class="btn_block"><i class="fa fa-lock"></i> Khóa</span>'#</a>
</script>

<!--Win-->
<div class="modal" modal-show modal-visible="showModal_User" role="dialog" data-refresh="true">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Thông tin tài khoản</h4>
            </div>
            <div class="modal-body cus-window">
                <div class="cus-form">
                    <div class="form-body">
                        <form action="/" method="post">
                            <div class="form-content-100" v-form="vform_User">
                                <input type="hidden" ng-model="Item.ID" value="{{Item.ID}}" />
                                <div ng-show="Item.ID==0" class="rowinput">
                                    <label>Tên tài khoản<span class="required">*</span> </label>
                                    <div>
                                        <input type="text" class="k-textbox" maxlength="100" ng-model="Item.userName" v-form-require="true" v-form-length="100" />
                                    </div>
                                    <div class="error"><a kendo-tooltip><i class="fa fa-info-circle"></i></a></div>
                                    <div class="clear"></div>
                                </div>
                                <div ng-show="Item.ID==0" class="rowinput">
                                    <label>Mật khẩu<span class="required">*</span> </label>
                                    <div>
                                        <input type="password" class="k-textbox" maxlength="100" ng-model="Item.password" v-form-require="true" v-form-length="100" />
                                    </div>
                                    <div class="error"><a kendo-tooltip><i class="fa fa-info-circle"></i></a></div>
                                    <div class="clear"></div>
                                </div>
                                <div ng-show="Item.ID==0" class="rowinput">
                                    <label>Email<span class="required">*</span> </label>
                                    <div>
                                        <input type="email" class="k-textbox" maxlength="100" ng-model="Item.email" v-form-email="true" v-form-require="true" v-form-length="100" />
                                    </div>
                                    <div class="error"><a kendo-tooltip><i class="fa fa-info-circle"></i></a></div>
                                    <div class="clear"></div>
                                </div>

                                <div class="rowinput">
                                    <label>Quyền<span class="required">*</span></label>
                                    <div>
                                        <input class="cus-combobox" kendo-drop-down-list="drdpl_Role" ng-model="Item.roleID" k-options="Role_drdlOptions" v-form-drdl="true" style="width: 100%" />
                                    </div>
                                    <div class="error"><a kendo-tooltip><i class="fa fa-info-circle"></i></a></div>
                                    <div class="clear"></div>
                                </div>                   
                              
                                <div class="rowinput">
                                    <label>Họ tên</label>
                                    <div>
                                        <input type="text" class="k-textbox" maxlength="100" ng-model="Item.fullname" />
                                    </div>
                                    <div class="error"><a kendo-tooltip><i class="fa fa-info-circle"></i></a></div>
                                    <div class="clear"></div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="/" ng-click="USER_SaveClick($event,vform_User)" class="btn btn-success btn-save" data-title="Lưu">Lưu</a>
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>

    </div>
</div>

