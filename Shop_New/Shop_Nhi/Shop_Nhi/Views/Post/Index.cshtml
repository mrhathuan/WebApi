@section JsFooter{

}


<section id="aa-product-category">
    <div class="container">
        <div class="row">
            <nav class="woocommerce-breadcrumb">
                <a href="/">Trang chủ</a>
                <span class="navigation-pipe"></span>
                Bài viết
            </nav>
            <div class="col-lg-9 col-md-9 col-sm-8 col-md-push-3">
                <h1 class="page-heading">
                    <span class="page-heading-title">Bài viết thời trang</span>
                </h1>
                <div class="aa-blog-content">
                    <div class="row">
                        @foreach (var item in Model.Where(x => x.status == true))
                        {
                            <div class="col-md-4 col-sm-4">
                                <article class="aa-blog-content-single">
                                    <h4><a href="/bai-viet/@item.metatTitle-@item.ID">@item.name</a></h4>
                                    <figure class="aa-blog-img">
                                        <a href="/bai-viet/@item.metatTitle-@item.ID"><img src="@item.image" alt="@item.name"></a>
                                    </figure>
                                    <div class="aa-article-bottom">
                                        <div class="aa-post-author">
                                            <i class="fa fa-user"></i> Admin
                                        </div>
                                        <div class="aa-post-date">
                                            <i class="fa fa-calendar"></i>
                                            @item.createDate
                                        </div>
                                    </div>
                                    @if(item.description.Length < 75)
                                    {
                                        <p>>@item.description</p>
                                    }
                                    else
                                    {
                                        <p>@item.description.Substring(0, 75) ...</p>
                                    }
                                    
                                    <a class="aa-read-mor-btn" href="/bai-viet/@item.metatTitle-@item.ID">
                                        Xem thêm
                                        <span class="fa fa-long-arrow-right"></span>
                                    </a>
                                  
                                </article>
                            </div>
                        }
                    </div>
                   
                </div>
            </div>
            @{Html.RenderAction("_Category", "Home");}
        </div>
    </div>
</section>
