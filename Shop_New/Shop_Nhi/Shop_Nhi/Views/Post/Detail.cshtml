@model Shop_Nhi.Models.Framework.Post
@{
    ViewBag.Title = Model.name;
    ViewBag.Keywords = Model.metaKeywords;
    ViewBag.Description = Model.metaDescription;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section JsFooter{
    <!--Comment-->
<script>
    window.fbAsyncInit = function () {
        FB.init({
            appId: '283485375367823',
            xfbml: true,
            version: 'v2.7'
        });
    };

    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) { return; }
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
</script>

<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-57291b6bc7d79e02"></script>
    }

<!-- Blog Archive -->
<section id="aa-product-category">
    <div class="container">
        <div class="row">
            <nav class="woocommerce-breadcrumb">
                <a href="/">Trang chủ</a>
                <span class="navigation-pipe"> </span>
                <a href="/bai-viet">Bài viết </a>
                <span class="navigation-pipe"> </span>
                @Model.name
            </nav>

            <div class="col-lg-9 col-md-9 col-sm-8 col-md-push-3">
                <h1 class="page-heading">
                    <span class="page-heading-title">@Model.name</span>
                </h1>
                <!--Detail-->
                @if (Model.detail != null)
                {
                    <div class="aa-blog-content aa-blog-details">
                        <article class="aa-blog-content-single">
                            <div class="aa-article-bottom">
                                <div class="aa-post-author">
                                    <i class="fa fa-user"></i>
                                    Admin
                                </div>
                                <div class="aa-post-date">
                                    <i class="fa fa-calendar"></i>
                                    @Model.createDate
                                </div>
                            </div>
                            <div class="aa-post-img">
                                <a href="/bai-viet/@Model.metatTitle-@Model.ID"><img src="@Model.image" alt="@Model.name"></a>
                            </div>
                           @Html.Raw(Model.detail)
                            <div class="blog-single-bottom">
                                <div class="row">
                                    <div class="col-md-8 col-sm-6 col-xs-12">
                                        <div class="blog-single-tag">
                                            <span><i class="fa fa-tags"></i> Tags:</span>

                                            @{
                                                var tags = (List<Shop_Nhi.Models.Framework.Tag>)ViewBag.Tags;
                                                foreach (var item in tags)
                                                {
                                                     <a href="/tag/@item.ID">@item.Name</a>             
                                                }
                                            }
                                                                         
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="addthis_native_toolbox"></div>
                                    </div>
                                </div>
                            </div>
                        </article>

                        <!--Comment-->
                        <div class="aa-blog-comment-threat">
                            <h3>BÌNH LUẬN</h3>
                            <div class="comments">
                                <div id="fb-root"></div>
                                <div class="fb-comments" data-href="@Request.Url.AbsoluteUri" data-width="100%" data-numposts="5"></div>
                            </div>
                        </div>

                    </div>
                }
                else
                {
                    <p>Nội dung đang được cập nhật</p>
                }
            </div>

            @{Html.RenderAction("_Category", "Home");}
        </div>
    </div>
</section>