@model Shop_Nhi.Models.Framework.Contact
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.metatTitle;
    ViewBag.KeyWords = Model.metaKeywords;
    ViewBag.Description = Model.metaDescription;

}
@section JsFooter{
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCnO-FrbXvuMz2PuqbDR2wVJMjoirQ3KlU&callback=initMap"
        async defer></script>

<script>

        
        // When the user clicks the marker, an info window opens.
        //21.046300, 105.793266
        function initMap() {
            var uluru = { lat: 21.046300, lng: 105.793266 };
            var map = new google.maps.Map(document.getElementById('mapCanvas'), {
                zoom: 18,
                center: new google.maps.LatLng(17.7633802,106.4127513)
            });

            
           
            var infowindow = new google.maps.InfoWindow({
                content: '<strong>ZURYSHOP</strong><br>95-hùng vương-ba đồn<br> Quảng Bình<br>'
            });

            var marker = new google.maps.Marker({
                position: uluru,
                map: map,
                title: 'Địa chỉ'
            });
            marker.addListener('click', function () {
                infowindow.open(map, marker);
            });
        }
        google.maps.event.addDomListener(window, 'load', initMap);
</script>

}

<section id="aa-product-category">
    <div class="container">
        <div class="row">
            <nav class="woocommerce-breadcrumb">
                <a href="/">Trang chủ</a>
                <span class="navigation-pipe"> </span>
                Liên hệ
            </nav>

            <div class="col-lg-9 col-md-9 col-sm-8 col-md-push-3">
                <h1 class="page-heading">
                    <span class="page-heading-title">Liên hệ</span>
                </h1>

                <div class="cart-view-area">

                    <div class="aa-contact-top">
                        @if (Model.detail != null)
                        {
                            <address>
                                @Html.Raw(Model.detail)
                            </address>
                        }
                    </div>
                    <div class="aa-contact-map">
                        <div style="width:100%;height:700px" id="mapCanvas"></div>                        
                        @*<iframe src="@Html.Raw(Model.map)" width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>*@
                    </div>
                </div>
            </div>

            @{Html.RenderAction("_Category", "Home");}
        </div>
    </div>
</section>